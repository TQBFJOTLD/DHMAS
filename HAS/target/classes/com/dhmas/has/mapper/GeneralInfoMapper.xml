<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dhmas.has.mapper.GeneralInfoMapper">

    <select id="selectAll" resultType="com.dhmas.has.pojo.GeneralInfo">
        select * from generalinfo;
    </select>

    <select id="selectById" resultType="com.dhmas.has.pojo.GeneralInfo">
        select * from generalinfo where patient_id = #{id};
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="patient_id">
        insert into generalinfo (patient_id,age,gender,diagnosis,medication,insurance_type,treatment_duration)
        values (#{patient_id},#{age},#{gender},#{diagnosis},#{medication},#{insurance_type},#{treatment_duration});
    </insert>

    <update id="update">
        update generalinfo
        set
        age=#{age},
        gender=#{gender},
        diagnosis=#{diagnosis},
        medication=#{medication},
        insurance_type=#{insurance_type},
        treatment_duration=#{treatment_duration}
        where patient_id=#{patient_id} ;
    </update>


    <delete id="deleteById">
        delete from generalinfo where patient_id=#{patient_id};
    </delete>


</mapper>